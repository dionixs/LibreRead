<% provide(:title, 'Imports') %>

<h1 class="mt-10 mb-6 text-center text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white">
  Imports
</h1>

<% if @imports.empty? %>
  <h2 class="mb-2 text-3xl font-bold text-gray-500 dark:text-white text-center">
    Import list is empty!
  </h2>
  <div class="text-center mt-6">
    <%= link_to 'Import Highlights', import_clippings_url,
                class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-4 px-8 rounded' %>
  </div>
<% else %>
  <div class="overflow-x-auto relative shadow-md sm:rounded-lg mx-80">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="py-3 px-6">
          File name
        </th>
        <th scope="col" class="py-3 px-6">
          Date of download
        </th>
        <th scope="col" class="py-3 px-6">
          <span class="sr-only">Download</span>
        </th>
        <th scope="col" class="py-3 px-6">
          <span class="sr-only">Delete</span>
        </th>
      </tr>
      </thead>
      <tbody>
      <% @imports.each do |file| %>
        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
          <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
            <%= file.filename %>
          </th>
          <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
            <%= local_time(file.created_at) %>
          </th>
          <td class="py-4 px-6 text-right">
            <%= link_to "Download", "#{import_clippings_path}/#{file.id}", data: {turbolinks: false}, class: 'font-medium text-blue-600 dark:text-blue-500 hover:underline' %>
          </td>
          <td class="py-4 px-6 text-right">
            <%= link_to "Delete", "#{import_clippings_path}/#{file.id}", method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{file.filename}?", class: 'font-medium text-red-600 dark:text-red-500 hover:underline' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>


