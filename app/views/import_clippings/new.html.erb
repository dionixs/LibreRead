<% provide(:title, 'Import Highlights') %>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<h1 class="text-6xl font-normal leading-normal mt-10 mb-10 text-center">
  Import Highlights
</h1>

<%= form_with url: import_clippings_url, id: 'import_form', multipart: true do |form| %>
  <div class="flex justify-center items-center w-full">
    <%= form.label :text_file, "Import Highlights", class: "label text-6xl font-normal leading-normal mt-0 mb-10 text-center flex flex-col justify-center items-center w-full h-64 bg-gray-50 rounded-lg border-2 border-gray-300 border-dashed cursor-pointer dark:hover:bg-bray-800 dark:bg-gray-700 hover:bg-gray-100 dark:border-gray-600 dark:hover:border-gray-500 dark:hover:bg-gray-600" do %>
      <div class="flex flex-col justify-center items-center pt-5 pb-6">
        <svg aria-hidden="true" class="mb-3 w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path></svg>
        <p class="mb-2 text-sm text-gray-500 dark:text-gray-400">
          <span class="font-semibold">Click to upload</span> or drag and drop
        </p>
        <p class="text-xs text-gray-500 dark:text-gray-400">
          Click the button below and browse to the ‘Documents’
          folder in your Kindle USB drive and select the ‘My Clippings.txt’ file.
        </p>
      </div>
      <%= form.file_field :text_file, multiple: false, class: "hidden", onchange: 'this.form.submit();' %>
    <% end %>
  </div>
<% end %>
