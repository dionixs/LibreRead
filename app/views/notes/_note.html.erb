<div id="<%= note.id %>" class="mt-10 max-w-md mx-auto md:max-w-4xl">
  <div class="p-4 w-full bg-white rounded-lg border shadow-md sm:p-8 dark:bg-gray-800 dark:border-gray-700">
    <h5 class="text-lg font-bold dark:text-white text-left mb-3">
      <span class="text-xl"><%= note.title %></span>
      <span class="text-sm text-gray-600 font-medium">by
        <%= truncate(note.author, length: 50) %>
        </span>
    </h5>
    <p class="mb-3 font-light text-gray-500 dark:text-gray-400">
      <%= note.clipping %>
    </p>
    <span class="text-sm text-gray-600">(Location <%= note.place %>)</span>
    <br>
    <span>
      <time class="text-xs text-gray-600" datetime="<%= note.created_kindle_at %>">
        Created: <%= local_time(note.created_kindle_at) %>
      </time>
    </span>
    <br>
    <div class="mt-4">
      <%= link_to "Edit", "#{edit_import_note_path(note.import_id, note.id)}", class: 'focus:outline-none text-white bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:focus:ring-yellow-900' %>
      <%= link_to "Delete", "#{import_note_url(note.import_id, note.id)}", data: { method: :delete, confirm: "Are you sure?" }, class: 'focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900' %>
    </div>
  </div>
</div>
