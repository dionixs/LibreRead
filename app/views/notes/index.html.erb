<% provide(:title, 'Notes') %>

<% if @notes.blank? %>
  <h2 class="mt-20 mb-10 text-3xl font-bold text-gray-500 dark:text-white text-center">
    No notes found
  </h2>

  <div class="text-center mt-10 mb-5">
    <%= link_to 'New Import', new_import_path,
                class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
<% end %>

<div class="mt-10 max-w-md mx-auto md:max-w-4xl text-center">
  <%= paginate @notes %>
</div>

<%= render @notes %>

<div class="mt-10 max-w-md mx-auto md:max-w-4xl text-center">
  <%= paginate @notes %>
</div>
