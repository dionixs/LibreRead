              %li
                %button#dropdownNavbarLink.flex.justify-between.items-center.py-2.pr-4.pl-3.w-full.font-medium.text-gray-700.rounded.hover:bg-gray-100.md:hover:bg-transparent.md:border-0.md:hover:text-blue-700.md:p-0.md:w-auto.dark:text-gray-400.dark:hover:text-white.dark:focus:text-white.dark:border-gray-700.dark:hover:bg-gray-700.md:dark:hover:bg-transparent.text-lg{"data-dropdown-toggle" => "dropdownNavbar"}
