                  %svg.ml-1.w-5.h-5{"aria-hidden" => "true", :fill => "currentColor", :viewbox => "0 0 20 20", :xmlns => "http://www.w3.org/2000/svg"}
                    %path{"clip-rule" => "evenodd", :d => "M5.293 7.293a1 1 0\n                011.414 0L10 10.586l3.293-3.293a1 1 0 111.414\n                1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z", "fill-rule" => "evenodd"}
