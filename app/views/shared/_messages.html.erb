<% flash.each do |type, msg| %>
  <% if type == 'notice' %>
    <%= tag.div msg, class: 'text-center p-4 mb-4 text-sm text-blue-700 bg-blue-100 rounded-lg dark:bg-blue-200 dark:text-blue-800' %>
  <% else %>
    <%= tag.div msg, class: 'text-center p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800' %>
  <% end %>
<% end %>

<% flash.clear if flash.any? %>